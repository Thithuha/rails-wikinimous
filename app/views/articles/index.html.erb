<h1>Les Articles</h1>

<%= link_to "Add article", new_article_path %>
<% @articles.each do |article| %>
<h2><%= article.title %></h2>
<p><%= article.content %></p>

<%= link_to "Voir plus", article_path(article) %>
<%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you are?"} %>
<% end %>
